<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_outline"
           >

            <ImageView
                android:id="@+id/ImgVw"
                android:layout_width="130dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/outline" />

            <TextView
                android:id="@+id/eleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/ImgVw"
                android:fontFamily="@font/actor"
                android:text="Element Name"
                android:textColor="#245021"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/eleName"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/ImgVw"
                android:text="Location/country/region/hotel loaction"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/scoreClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/ImgVw"
                android:text="(good/verygood/ .. )"
                android:textColor="#1E1D1D"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/rvwScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/scoreClass"
                android:text="Review Score"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/rvwNr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rvwScore"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/ImgVw"
                android:text="Review number"
                android:textColor="#1E1D1D"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rvwNr"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="150dp"
                android:layout_toRightOf="@id/ImgVw"
                android:fontFamily="sans-serif-black"
                android:text="price"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/curr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rvwNr"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/price"
                android:fontFamily="sans-serif-black"
                android:text="Currency"
                android:textColor="#1E1D1D" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>